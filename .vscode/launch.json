{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "chrome",
          "request": "launch",
          "name": "meteor-client",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceFolder}"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "meteor-server",
          "runtimeExecutable": "npm",
          "runtimeArgs": ["run", "start:debug"],
          "outputCapture": "std",
          "restart": true,
          "port": 9229,
          "timeout": 30000
      }
  ],
  "compounds": [
      {
          "name": "meteor",
          "configurations": ["meteor-server", "meteor-client"]
      }
  ]
}